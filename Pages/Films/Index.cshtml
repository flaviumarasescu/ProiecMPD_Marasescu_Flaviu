@page "/{id:int?}"
@model ProiecMPD_Marasescu_Flaviu.Pages.Films.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Films</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].FilmImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].ReleaseDate)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Film[0].Distribution.DistributionName)*@
                Distributed By
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film[0].FilmCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FilmD.Films) {

    string selectedRow = "";
        if (item.ID == Model.FilmID)
            {
                selectedRow = "table-success";
            }

    
        <tr class="@selectedRow">
            <td>
                <img src=" @Html.DisplayFor(modelItem => item.FilmImg)" alt="" width="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distribution.DistributionName)
            </td>
            <td>
                @{
                    foreach (var category in item.FilmCategories)
                    {
                        //@category.Category.ID 
                        @: @category.Category.CategoryName <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
