@page
@model ProiecMPD_Marasescu_Flaviu.Pages.Films.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Film</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Film.ID" />
            <div class="form-group">
                <label asp-for="Film.FilmImg" class="control-label"></label>
                <input asp-for="Film.FilmImg" class="form-control" />
                <span asp-validation-for="Film.FilmImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Title" class="control-label"></label>
                <input asp-for="Film.Title" class="form-control" />
                <span asp-validation-for="Film.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Director" class="control-label"></label>
                <input asp-for="Film.Director" class="form-control" />
                <span asp-validation-for="Film.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Rating" class="control-label"></label>
                <input asp-for="Film.Rating" class="form-control" />
                <span asp-validation-for="Film.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.ReleaseDate" class="control-label"></label>
                <input asp-for="Film.ReleaseDate" class="form-control" />
                <span asp-validation-for="Film.ReleaseDate" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.DistributionID" class="control-label">Publisher Name</label>
                <select asp-for="Film.DistributionID" class="form-control" asp-items="ViewBag.DistributionID">
                </select>
                <span asp-validation-for="Film.DistributionID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedCategoryDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCategories"
                                               value="@cat.CategoryID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.CategoryID @: @cat.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
